<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin Panel</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<body>
    <style>
        /* Body and background */
        body {
            font-family: 'Roboto', sans-serif;
            background: #f1f3f5;
            margin-top: 56px;
            height: 100vh;
            overflow-x: hidden;
        }

        /* Navbar */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: #6c757d; /* Grey navbar */
            z-index: 1000;
        }

        .navbar .navbar-brand {
            font-size: 28px;
            font-weight: bold;
            color: white;
        }

        .navbar .navbar-toggler {
            border-color: #fff;
        }

        .navbar .navbar-toggler-icon {
            background-color: #fff;
        }

        /* Main Container */
        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding-top: 100px;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header h1 {
            font-size: 30px;
            color: #343a40; /* Dark grey */
        }

        /* Search Section */
        .search-section {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            margin-top: 80px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .search-section .search-box {
            width: 50%;
            margin-right: 10px;
            border: 1px solid #ced4da;
        }

        .search-section .btn-primary {
            background-color: #6c757d; /* Grey button */
            border: none;
            color: white;
            padding: 8px 16px;
        }

        .search-section .btn-primary:hover {
            background-color: #5a6268;
        }

        .search-section .btn-view-all {
            background-color: #5a6268;
            border: none;
            color: white;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
        }

        .search-section .btn-view-all:hover {
            background-color: #495057;
        }

        /* Message */
        .message {
            color: red;
            text-align: center;
            margin-bottom: 20px;
            font-size: 16px;
        }

        /* Cards for user data */
        /* User Card with Relative Positioning */
.user-card {
    background-color: white;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
    position: relative; /* This is crucial to position the buttons correctly */
}

/* Button Group Styling */
.user-card .btn-group {
    position: absolute;
    top: 10px;  /* Adjusted top position */
    right: 10px;  /* Adjusted right position */
    z-index: 1;  /* Ensure the buttons appear on top */
}

/* Button Styling */
.user-card .btn {
    font-size: 12px;
    padding-left: 10px 10px;
    margin-left: 10px;  /* Increased margin to add space between the buttons */
    margin-right: 8px;
}

        /* Table */
        .table-responsive {
            margin-top: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #6c757d;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary {
            background-color: #6c757d;
            color: white;
        }

        /* Modal */
        /* Modal Style */
.modal-content {
    background-color: #f9f9f9;  /* Light grey background */
    border-radius: 8px;
    padding: 20px;
    width: 400px;
    margin: 100px auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
}

/* Close button style */
.close {
    font-size: 30px;
    cursor: pointer;
    color: #888;
    position: absolute;
    top: 10px;
    right: 15px;
}

/* Modal title */
.modal-content h2 {
    color: #333; /* Dark grey text */
    font-size: 20px;
    margin-bottom: 20px;
    text-align: center;
}

/* Input field styling */
.modal-content input[type="email"],
.modal-content input[type="password"] {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    background-color: #fff; /* White background for inputs */
    color: #333;
    transition: border-color 0.3s ease;
}

/* Focus effect for input fields */
.modal-content input[type="email"]:focus,
.modal-content input[type="password"]:focus {
    border-color: #2575fc; /* Blue border on focus */
    outline: none;
}

/* Save Changes button */
.modal-btn {
    background-color: #2575fc;  /* Primary color */
    color: white;
    border: none;
    padding: 12px 20px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.3s ease;
}

/* Button hover effect */
.modal-btn:hover {
    background-color: #6a11cb;  /* Slightly darker blue */
}

/* Modal Background */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
    z-index: 1001;
}


        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }
    </style>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item me-3">
                        <a class="btn btn-success" href="/admin/dashboard/add">Add User</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-danger" onclick="window.location.href='/admin/logout'">Logout</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Search Section -->
    <div class="container search-section">
        <form action="/admin/searchUser" method="post" class="d-flex justify-content-center">
            <input type="search" id="name" class="form-control search-box" name="search"
                value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
            <button type="submit" class="btn btn-primary" onclick="return validateSearch()">Search</button>
            <button type="submit" class="btn btn-view-all ms-2">View All</button>
        </form>
    </div>

    <!-- Main Container -->
    <div class="container mt-5">
        <div class="header">
            <h1>USER'S DATA</h1>
        </div>

        <p class="message"><%= message %></p>

        <!-- Cards or User Data Section -->
        <div class="row">
            <% users.forEach((user, index) => {  %>
            <div class="col-md-4 mb-3">
                <div class="user-card">
                    <h5><%= user.email %></h5>
                    <div class="btn-group">
                        <button onclick="openEditUserModal('<%= user._id %>', '<%= user.email %>')" class="btn btn-success btn-sm">Edit</button>
                        <button onclick="deleteUser('<%= user._id %>')" class="btn btn-danger btn-sm">Delete</button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    </div>

    <!-- Edit User Modal -->
    <div id="editUserModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeEditUserModal()">&times;</span>
            <h2>Edit User</h2>
            <form action="/admin/edit" id="editUserForm" method="post">
                <input type="hidden" id="editUserId" name="id">
                <label for="editEmail">Email</label>
                <input type="email" id="editEmail" name="email" placeholder="Email">
                <label for="editPassword">Password</label>
                <input type="password" id="editPassword" name="password" placeholder="Password">
                <button type="submit" class="modal-btn">Save Changes</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script>
        // Open and close edit modal
        function openEditUserModal(id, email) {
            document.getElementById('editUserModal').style.display = "block";
            document.getElementById('editUserId').value = id;
            document.getElementById('editEmail').value = email;
        }

        function closeEditUserModal() {
            document.getElementById('editUserModal').style.display = "none";
        }

        function deleteUser(userId) {
            if (confirm("Are you sure you want to delete this user?")) {
                window.location.href = `/admin/delete/${userId}`;
            }
        }

        // Search validation
        function validateSearch() {
            const searchInput = document.getElementById('name').value.trim();
            if (!searchInput) {
                alert('Please enter a search term');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>
